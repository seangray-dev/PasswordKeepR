<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PasswordKeepR | Register</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />

    <!-- fonts -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:wght@600&family=Manrope:wght@300;400;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- font-awesome-icons -->
    <script
      src="https://kit.fontawesome.com/be692c047d.js"
      crossorigin="anonymous"
    ></script>

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
    <script defer src="/scripts/register-form.js"></script>
  </head>

  <body class="register-login-body">
    <nav class="nav">
      <div class="nav__container container">
        <a href="/" class="nav__logo">
          Password<span class="nav__logo-light">KeepR</span>
        </a>
        <a href="/login"><button class="btn-secondary">Login</button></a>
      </div>
    </nav>
    <section class="register-login container">
      <h1 class="register-login__title header__title-underline">Register</h1>
      <form class="register-login__form" action="/register" method="POST">
        <div class="register-login__form-div">
          <label class="register-login__form-label" for="email">Email:</label>
          <input
            class="register-login__form-input"
            type="email"
            id="email"
            name="email"
            required
          />
          <p class="error-message-form">Email already exists</p>
        </div>
        <div class="register-login__form-div">
          <label class="register-login__form-label" for="password"
            >Password:</label
          >
          <input
            class="register-login__form-input"
            type="password"
            id="password"
            name="password"
            required
          />
          <p class="error-message-form" id="password-error">
            Password must be at least 8 characters long
          </p>
        </div>
        <div class="register-login__form-div">
          <label class="register-login__form-label" for="password_confirm"
            >Retype Password:</label
          >
          <input
            class="register-login__form-input"
            type="password"
            id="password_confirm"
            name="password_confirm"
            required
          />
          <p class="error-message-form" id="password-confirm-error">
            Passwords do not match
          </p>
        </div>
        <div class="register-login__form-div">
          <label class="register-login__form-label" for="organization"
            >Organization (optional):</label
          >
          <input
            class="register-login__form-input"
            type="text"
            id="organization"
            name="organization"
          />
        </div>
        <div class="register-login__form-div">
          <p class="success">User registered successfully!</p>
          <button class="btn-primary submit" type="submit">Submit</button>
        </div>
        <div class="register-login__form-link">
          <p>Already have an account?</p>
          <span
            ><a href="/login"
              ><button class="btn-secondary" type="button">Login</button></a
            ></span
          >
        </div>
      </form>
    </section>
  </body>
</html>
